	  <p>
	    <%= f.label :nome %><br />
	    <%= f.text_field :nome %>
	  </p>
	  <p>
	    <%= f.label :idade %><br />
	    <%= f.text_field :idade %>
	  </p>
	  <p>
	    <%= f.submit 'Create' %>
	  </p>
	<% end %>

	<%= link_to 'Back', clientes_path %>
